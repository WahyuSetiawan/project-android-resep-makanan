<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.resepmakanantradisional.activity.MenuUtama">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <ImageView
                android:id="@+id/menu_utama_icon"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:src="@drawable/salad" />

            <Button
                android:id="@+id/menu_utama_button_provinsi"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_utama_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="Provinsi" />

            <Button
                android:id="@+id/menu_utama_button_makanan"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_utama_button_provinsi"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="Makanan" />

            <Button
                android:id="@+id/menu_utama_button_about_me"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu_utama_button_makanan"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_centerHorizontal="true"
                android:text="Tentang Saya" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
